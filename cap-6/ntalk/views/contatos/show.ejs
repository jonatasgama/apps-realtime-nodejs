<%- include('../header'); %>

  <body>
	<div class="container col-sm-4 col-offset-4">
		<h2 class="mt-5 text-center"><span class="badge bg-secondary">N</span>Talk</h2>
		
	</div>
	
	<div class="container mt-5">
	<h4>Detalhes</h4>
		<form action="/contato/<%- id %>?_method=delete" method="post">
			<div class="row">
				  <div class="mb-3 row">
					<label for="nome" class="col-sm-2 col-form-label">Nome</label>
					<div class="col-sm-10">
					  <input type="text" readonly class="form-control-plaintext" id="nome" value="<%- contato.nome %>">
					</div>
				  </div>
				  
				  <div class="mb-3 row">
					<label for="email" class="col-sm-2 col-form-label">E-mail</label>
					<div class="col-sm-10">
					  <input type="text" readonly class="form-control-plaintext" id="email" value="<%-	contato.email %>">
					</div>
				  </div>				  

			  <div class="col">
				<button type="submit" class="btn btn-danger">Excluir</button>
				<a href="/contato/<%- id %>/editar" class="btn btn-success">Editar</a>
			  </div>
			</div>		
		</form>	
				
	</div>
 <%- include('../footer'); %>