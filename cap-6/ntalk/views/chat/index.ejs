<%- include('../header'); %>
<script src="/socket.io/socket.io.js"></script>
<script>
    const socket = io();
    socket.on('send-client', (msg) => {
        document.getElementById('chat').innerHTML += msg+'<br>';
    });

    const enviar = () => {
        const nome = document.getElementById('nome').value;
        const msg = document.getElementById('msg').value;
        socket.emit('send-server', { nome, msg });
    }
</script>
  <body>
	<div class="container col-sm-4 col-offset-4">
		<h2 class="mt-5 text-center"><span class="badge bg-secondary">N</span>Talk</h2>
		
	</div>
	
	<div class="container mt-5">
        <section>
            <pre id="chat"></pre>
            <input type="hidden" id="nome" value="<%- usuario.nome %>">
            <input type="text" id="msg" placeholder="Mensagem">
            <button onclick="enviar();">Enviar</button>
        </section>      
				
	</div>

 <%- include('../footer'); %>